<%- include("./partials/header.ejs", {title: "Mettre à jour l'article"}) %>

<h1>Mettre à jour un article</h1>

<form class="flex column gap-10" action="">
  <div>
    <div>
      <label for="author">Auteur</label>
    </div>
    <div>
      <input class="pd-5 b-radius-10 w-100 border-1-black" type="text" name="author" id="author" value="<%= article.author %>" />
    </div>
  </div>
  <div>
    <div>
      <label for="title">Title</label>
    </div>
    <div>
      <input class="pd-5 b-radius-10 w-100 border-1-black" type="text" name="title" id="title" value="<%= article.title %>" />
    </div>
  </div>
  <div>
    <div>
      <label for="description">Description</label>
    </div>
    <div>
      <input class="pd-5 b-radius-10 w-100 border-1-black" type="text" name="description" id="description" value="<%= article.description %>"/>
    </div>
  </div>
  <div>
    <div>
      <label for="img">
        <img id="previewImage" class="details-img" src="<%= article.urlToImage %>" alt="">
      </label>
    </div>
    <div>
      <input class="pd-5 b-radius-10 w-100 border-1-black" type="file" name="img" id="img" />
    </div>
  </div>

  <div>
    <div>
      <label for="content">Contenu</label>
    </div>
    <div>
      <textarea class="pd-5 b-radius-10 w-100 border-1-black" name="content" id="content"><%= article.content %></textarea>
    </div>
  </div>

  <input class="btn bg-blue col-white w-100 mg-bottom-10 " type="submit" id="btn-submit" value="Modifier" data-slug="<%= article.slug %>"/>
</form>

<script src="/js/updateArticle.js"></script>
<%- include("./partials/footer.ejs") %>
